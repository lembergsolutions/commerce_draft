{
    "name": "ozin7/commerce-draft",
    "description": "Project template for Drupal 8 sites built with the Draft distribution.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "drupal/coder": "^8.3",
        "drupal/drupal-extension": "^5",
        "drupal/stage_file_proxy": "^2.0",
        "lemberg/draft-environment": "^3.5.0",
        "mglaman/phpstan-drupal": "^1.1",
        "phpro/grumphp": "*",
        "phpspec/prophecy-phpunit": "^2",
        "phpstan/phpstan-deprecation-rules": "^1.1",
        "phpstan/phpstan-phpunit": "^1.3",
        "phpunit/phpunit": "^9.5",
        "symfony/phpunit-bridge": "^6.2"
    },
    "require": {
        "composer/installers": "^2.1",
        "cweagans/composer-patches": "^1.7",
        "drupal/admin_toolbar": "^3.0",
        "drupal/advagg": "^6.0",
        "drupal/better_exposed_filters": "^6.0",
        "drupal/commerce": "^2.21",
        "drupal/commerce_paypal": "^1.0@RC",
        "drupal/commerce_pricelist": "^2.1",
        "drupal/commerce_shipping": "^2.x-dev",
        "drupal/core-composer-scaffold": "^10.0",
        "drupal/core-project-message": "^10.0",
        "drupal/core-recommended": "^10.0",
        "drupal/easy_breadcrumb": "^2.0",
        "drupal/elasticsearch_connector": "^7.x-dev",
        "drupal/environment_indicator": "^4.0",
        "drupal/fences": "^3.0",
        "drupal/field_group": "^3.2",
        "drupal/gin": "^3.0@RC",
        "drupal/gin_toolbar": "^1.0@beta",
        "drupal/google_analytics": "^4.0",
        "drupal/google_tag": "^1.5",
        "drupal/hreflang": "^1.9",
        "drupal/inline_entity_form": "^1.0@RC",
        "drupal/jquery_ui_accordion": "^2.0",
        "drupal/layout_builder_modal": "^1.1",
        "drupal/layout_builder_restrictions": "^2.12",
        "drupal/menu_item_extras": "^2.16",
        "drupal/metatag": "^1.22",
        "drupal/module_filter": "^4.0",
        "drupal/pathauto": "^1.11",
        "drupal/price_difference_formatter": "^1.2",
        "drupal/rdf": "^2.1",
        "drupal/redirect": "^1.8",
        "drupal/robotstxt": "^1.4",
        "drupal/search_api": "^1.26",
        "drupal/search_api_solr": "^4.2",
        "drupal/simple_sitemap": "^4.1",
        "drupal/state_machine": "^1.7",
        "drupal/xmlsitemap": "^1.4",
        "drupal/yoast_seo": "^1.7",
        "drush/drush": "^11.0",
        "platformsh/config-reader": "^2.4"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "scripts": {
        "pre-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "pre-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::checkComposerVersion"
        ],
        "post-install-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "post-update-cmd": [
            "DrupalProject\\composer\\ScriptHandler::createRequiredFiles"
        ],
        "build": [
            "composer install",
            "drush updb",
            "drush cr",
            "drush cim -y",
            "drush cr"
        ],
        "site-install": [
            "composer install",
            "drush si --existing-config -y",
            "drush cr",
            "drush cim -y",
            "drush cr",
            "drush upwd admin admin",
            "drush en draft_content",
            "drush pmu draft_content"
        ]
    },
    "config": {
        "bin-dir": "vendor/bin",
        "vendor-dir": "vendor",
        "sort-packages": true,
        "discard-changes": true,
        "platform": {
            "php": "8.1"
        },
        "allow-plugins": {
            "composer/installers": true,
            "cweagans/composer-patches": true,
            "drupal/core-composer-scaffold": true,
            "drupal/core-project-message": true,
            "lemberg/draft-environment": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpro/grumphp": true
        }
    },
    "autoload": {
        "psr-4": {
            "Lemberg\\Draft\\Template\\": "src/"
        }
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "docroot/"
            },
            "file-mapping": {
                "[web-root]/robots.txt": false
            },
            "allowed-packages": [
                "drupal/core"
            ]
        },
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/libraries/{$name}": [
                "type:drupal-library"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/Commands/contrib/{$name}": [
                "type:drupal-drush"
            ],
            "docroot/modules/custom/{$name}": [
                "type:drupal-custom-module"
            ],
            "docroot/profiles/custom/{$name}": [
                "type:drupal-custom-profile"
            ],
            "docroot/themes/custom/{$name}": [
                "type:drupal-custom-theme"
            ]
        },
        "merge-plugin": {
            "include": [
                "docroot/modules/custom/*/composer.json",
                "docroot/profiles/custom/*/composer.json",
                "docroot/themes/custom/*/composer.json"
            ]
        },
        "patches-file": "composer.patches.json",
        "composer-exit-on-patch-failure": true,
        "enable-patching": true
    }
}
