{
    "name": "lemberg/draft-template",
    "description": "Project template for Drupal 8 sites built with the Draft distribution.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "lemberg/draft-environment": "^3",
        "behat/mink": "^1.8",
        "behat/mink-goutte-driver": "^1.2",
        "behat/mink-selenium2-driver": "^1.4",
        "composer/composer": "^1.9.1",
        "drupal/coder": "^8.3.7",
        "mikey179/vfsstream": "^1.6.8",
        "phpunit/phpunit": "^8.4.1",
        "phpspec/prophecy": "^1.7",
        "symfony/css-selector": "^4.4",
        "symfony/phpunit-bridge": "^4.4",
        "symfony/error-handler": "^4.4",
        "justinrainbow/json-schema": "^5.2",
        "symfony/filesystem": "^4.4",
        "symfony/finder": "^4.4",
        "symfony/lock": "^4.4",
        "symfony/browser-kit": "^4.4",
        "symfony/dom-crawler": "^4.4 !=4.4.5",
        "easyrdf/easyrdf": "^0.9"
    },
    "require": {
        "composer/installers": "^1.3",
        "cweagans/composer-patches": "^1.6",
        "drupal/admin_toolbar": "^2.2",
        "drupal/commerce": "^2.17",
        "drupal/core-recommended": "^9.0.0",
        "drush/drush": "^10.2",
        "wikimedia/composer-merge-plugin": "^1.4"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "scripts": {
        "post-root-package-install": [
            "Lemberg\\Draft\\Template\\DrupalProject::configureIntegrations",
            "Lemberg\\Draft\\Template\\Cleaner::cleanUp"
        ],
        "post-install-cmd": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
            "Lemberg\\Draft\\Template\\DrupalProject::createRequiredFiles",
            "Lemberg\\Draft\\Template\\DrupalProject::localSetup"
        ],
        "post-update-cmd": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
            "Lemberg\\Draft\\Template\\DrupalProject::localSetup"
        ],
        "build": [
            "composer install",
            "drush si -y",
            "drush config-set \"system.site\" uuid 902d1300-7276-46f1-8608-7fc30b57e39a",
            "drush entity:delete shortcut_set",
            "drush cr",
            "drush cim -y",
            "drush cr",
            "drush upwd admin admin"
        ]
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Lemberg\\Draft\\Template\\": "src/"
        }
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "docroot/"
            },
            "file-mapping": {
                "[web-root]/robots.txt": false
            },
            "allowed-packages": [
                "drupal/core"
            ]
        },
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "merge-plugin": {
            "include": [
                "docroot/modules/custom/*/composer.json",
                "docroot/profiles/custom/*/composer.json",
                "docroot/themes/custom/*/composer.json"
            ]
        },
        "patches": {},
        "enable-patching": true
    }
}
