{
    "name": "lemberg/draft-template",
    "description": "Project template for Drupal 8 sites built with the Draft distribution.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "drupal/console": "^1.2.0",
        "drupal/devel": "^1.2",
        "drupal/reroute_email": "^1.0",
        "drupal/stage_file_proxy": "^1.0",
        "drush/drush": "^9",
        "lemberg/draft-environment": "^3",
        "behat/mink": "1.7.x-dev",
        "behat/mink-goutte-driver": "^1.2",
        "behat/mink-selenium2-driver": "1.3.x-dev",
        "drupal/coder": "^8.3.2",
        "jcalderonzumba/gastonjs": "^1.0.2",
        "jcalderonzumba/mink-phantomjs-driver": "^0.3.1",
        "mikey179/vfsstream": "^1.6.8",
        "phpunit/phpunit": "^6.5 || ^7",
        "phpspec/prophecy": "^1.7",
        "symfony/css-selector": "^3.4.0",
        "symfony/phpunit-bridge": "^3.4.3",
        "symfony/debug": "^3.4.0",
        "justinrainbow/json-schema": "^5.2",
        "symfony/filesystem": "~3.4.0",
        "symfony/finder": "~3.4.0",
        "symfony/lock": "~3.4.0"
    },
    "require": {
        "composer/installers": "^1.3",
        "cweagans/composer-patches": "^1.6",
        "drupal-composer/drupal-scaffold": "^2.5",
        "drupal/commerce": "^2.16",
        "drupal/commerce_product_tax": "^1.0@RC",
        "drupal/core": "^8.7.11",
        "drupal/layout_builder_restrictions": "^2.5",
        "drupal/physical": "^1.1",
        "drupal/single_row_layouts": "1.x-dev",
        "lemberg/draft": "^1.2.1",
        "symfony/browser-kit": "^3.4.0",
        "symfony/filesystem": "^3.4",
        "symfony/yaml": "^3.4",
        "wikimedia/composer-merge-plugin": "^1.4"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "scripts": {
        "post-root-package-install": [
            "Lemberg\\Draft\\Template\\DrupalProject::configureIntegrations",
            "Lemberg\\Draft\\Template\\Cleaner::cleanUp"
        ],
        "post-install-cmd": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
            "Lemberg\\Draft\\Template\\DrupalProject::createRequiredFiles",
            "Lemberg\\Draft\\Template\\DrupalProject::localSetup"
        ],
        "post-update-cmd": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
            "Lemberg\\Draft\\Template\\DrupalProject::localSetup"
        ],
        "build": [
            "composer install --dev",
            "drush si -y",
            "drush config-set \"system.site\" uuid 902d1300-7276-46f1-8608-7fc30b57e39a",
            "drush cim -y",
            "drush upwd admin admin"
        ]
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Lemberg\\Draft\\Template\\": "src/"
        }
    },
    "extra": {
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "merge-plugin": {
            "include": [
                "docroot/modules/custom/*/composer.json",
                "docroot/profiles/custom/*/composer.json",
                "docroot/themes/custom/*/composer.json"
            ]
        },
        "patches": {},
        "enable-patching": true
    }
}
