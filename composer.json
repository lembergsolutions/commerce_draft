{
    "name": "ozin7/commerce-draft",
    "description": "Project template for Drupal 8 sites built with the Draft distribution.",
    "type": "project",
    "license": "GPL-2.0-or-later",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require-dev": {
        "drupal/coder": "^8.3",
        "drupal/drupal-extension": "^4",
        "drupal/stage_file_proxy": "^1.0@beta",
        "eiriksm/site-schema": "dev-master",
        "lemberg/draft-environment": "^3",
        "mglaman/phpstan-drupal": "^0.11.10",
        "phpstan/phpstan-deprecation-rules": "^0.11.2",
        "phpstan/phpstan-phpunit": "^0.11.2",
        "phpunit/phpunit": "^8.4.1",
        "symfony/phpunit-bridge": "^5.1.4"
    },
    "require": {
        "composer/installers": "^1.3",
        "cweagans/composer-patches": "^1.6",
        "drupal/admin_toolbar": "^2.4",
        "drupal/commerce": "^2.21",
        "drupal/commerce_paypal": "^1.0@RC",
        "drupal/core-recommended": "^9.1",
        "drupal/commerce_pricelist": "^2.1",
        "drupal/commerce_shipping": "^2.0@RC",
        "drupal/price_difference_formatter": "^1.2",
        "drush/drush": "^10.2",
        "wikimedia/composer-merge-plugin": "^1.4",
        "zaporylie/composer-drupal-optimizations": "^1.1"
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://packages.drupal.org/8"
        }
    ],
    "scripts": {
        "post-root-package-install": [
            "Lemberg\\Draft\\Template\\DrupalProject::configureIntegrations",
            "Lemberg\\Draft\\Template\\Cleaner::cleanUp"
        ],
        "post-install-cmd": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
            "Lemberg\\Draft\\Template\\DrupalProject::createRequiredFiles",
            "Lemberg\\Draft\\Template\\DrupalProject::localSetup"
        ],
        "post-update-cmd": [
            "DrupalComposer\\DrupalScaffold\\Plugin::scaffold",
            "Lemberg\\Draft\\Template\\DrupalProject::localSetup"
        ],
        "build": [
            "composer install",
            "drush si -y",
            "drush config-set \"system.site\" uuid 902d1300-7276-46f1-8608-7fc30b57e39a",
            "drush entity:delete shortcut_set",
            "drush cr",
            "drush cim -y",
            "drush cr",
            "drush upwd admin admin"
        ]
    },
    "config": {
        "bin-dir": "bin",
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "Lemberg\\Draft\\Template\\": "src/"
        }
    },
    "extra": {
        "drupal-scaffold": {
            "locations": {
                "web-root": "docroot/"
            },
            "file-mapping": {
                "[web-root]/robots.txt": false
            },
            "allowed-packages": [
                "drupal/core"
            ]
        },
        "installer-paths": {
            "docroot/core": [
                "type:drupal-core"
            ],
            "docroot/modules/contrib/{$name}": [
                "type:drupal-module"
            ],
            "docroot/profiles/contrib/{$name}": [
                "type:drupal-profile"
            ],
            "docroot/themes/contrib/{$name}": [
                "type:drupal-theme"
            ],
            "drush/contrib/{$name}": [
                "type:drupal-drush"
            ]
        },
        "merge-plugin": {
            "include": [
                "docroot/modules/custom/*/composer.json",
                "docroot/profiles/custom/*/composer.json",
                "docroot/themes/custom/*/composer.json"
            ]
        },
        "patches": {},
        "enable-patching": true
    }
}
